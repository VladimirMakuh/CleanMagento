<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">subject_form.subject_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Subject Form</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <namespace>subject_form</namespace>
        <dataScope>data.general</dataScope>
        <deps>
            <dep>subject_form.subject_form_data_source</dep>
        </deps>
        <buttons>
            <button name="save" class="Elogic\Certificate\Ui\Component\Subject\Form\Button\Save"/>
            <button name="back">
                <url path="*/*/"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="reset">
                <class>reset</class>
                <label translate="true">Reset</label>
                <url path="*/*/edit"/>
            </button>
        </buttons>
    </settings>
    <dataSource name="subject_form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="elogic/subject/save"/>
        </settings>
        <dataProvider class="Elogic\Certificate\Ui\DataProvider\SubjectDataProvider" name="subject_form_data_source">
            <settings>
                <requestFieldName>subject_id</requestFieldName>
                <primaryFieldName>subject_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">General</label>
        </settings>
        <field name="subject_id" sortOrder="0" formElement="hidden">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">subject_id</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Entity ID</label>
                <dataScope>subject_id</dataScope>
            </settings>
        </field>
        <field name="subject" sortOrder="00" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Subject</item>
                </item>
            </argument>
            <settings>
                <dataType>string</dataType>
                <label translate="true">Subject</label>
                <dataScope>subject</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
