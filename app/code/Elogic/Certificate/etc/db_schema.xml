<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="elogic_subject" resource="default" engine="innodb" comment="Subject">
        <column xsi:type="int" name="subject_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Subject Id Column"/>
        <column xsi:type="varchar" name="subject" nullable="false" length="255" comment="Subject name column"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="subject_id"/>
        </constraint>
        <index referenceId="ELOGIC_SUBJECT_SUBJECT_ID" indexType="btree">
            <column name="subject_id"/>
        </index>
    </table>
    <table name="elogic_type" resource="default" engine="innodb" comment="Type">
        <column xsi:type="int" name="type_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Type Id Column"/>
        <column xsi:type="varchar" name="type" nullable="false" length="255" comment="Type name column"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="type_id"/>
        </constraint>
        <index referenceId="ELOGIC_TYPE_TYPE_ID" indexType="btree">
            <column name="type_id"/>
        </index>
    </table>
    <table name="elogic_certificate" resource="default" engine="innodb" comment="Certificate">
        <column xsi:type="int" name="certificate_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Certificate Id Column"/>
        <column xsi:type="int" name="type_id" identity="false" unsigned="true" nullable="false" comment="Type Id column"/>
        <column xsi:type="int" name="subject_id" identity="false" unsigned="true" nullable="false" comment="Subject Id column"/>
        <column xsi:type="varchar" name="student_name" nullable="false" length="255" comment="Student name column"/>
        <column xsi:type="varchar" name="student_surname" nullable="false" length="255" comment="Student surname column"/>
        <column xsi:type="date" name="date_valid" nullable="false" comment="Date column"/>
        <column xsi:type="varchar" name="signature" length="255" comment="Signature column"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="certificate_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="ELOGIC_CERTIFICATE_TYPE_ID_ELOGIC_TYPE_TYPE_ID" table="elogic_certificate" referenceTable="elogic_type" referenceColumn="type_id" column="type_id" onDelete="CASCADE"/>
        <constraint xsi:type="foreign" referenceId="ELOGIC_CERTIFICATE_SUBJECT_ID_ELOGIC_SUBJECT_SUBJECT_ID" table="elogic_certificate" referenceTable="elogic_subject" referenceColumn="subject_id" column="subject_id" onDelete="CASCADE"/>

        <index referenceId="ELOGIC_TYPE_TYPE_ID" indexType="btree">
            <column name="certificate_id"/>
        </index>
    </table>
</schema>
